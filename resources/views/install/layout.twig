<!DOCTYPE html>
<html lang="{{ app.locale|replace({'_': '-'}) }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="{{ csrf_token() }}">
    <title>{{ t('install.title') }}</title>
    {{ vite(['resources/css/app.css']) }}
</head>
<body class="bg-gray-100 min-h-screen">
    <div class="min-h-screen flex flex-col">
        <header class="bg-white shadow-sm">
            <div class="max-w-3xl mx-auto px-4 py-4">
                <h1 class="text-xl font-semibold text-gray-900">{{ t('install.header') }}</h1>
            </div>
        </header>

        <main class="flex-1 py-8">
            <div class="max-w-3xl mx-auto px-4">
                {% if step is defined %}
                {% set steps = {
                    'welcome': t('install.steps.welcome'),
                    'requirements': t('install.steps.requirements'),
                    'database': t('install.steps.database'),
                    'environment': t('install.steps.environment'),
                    'admin': t('install.steps.admin'),
                    'finalize': t('install.steps.finalize')
                } %}
                {% set currentFound = false %}
                <nav class="mb-8">
                    <ol class="flex items-center space-x-2 text-sm">
                        {% for key, label in steps %}
                            {% set isCurrent = step == key %}
                            {% if isCurrent %}
                                {% set currentFound = true %}
                            {% endif %}
                            {% set isPast = not currentFound and not isCurrent %}
                            <li class="flex items-center">
                                <span class="{% if isCurrent %}text-blue-600 font-medium{% elseif isPast %}text-gray-500{% else %}text-gray-400{% endif %}">
                                    {{ label }}
                                </span>
                                {% if not loop.last %}
                                    <svg class="w-4 h-4 mx-2 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                    </svg>
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ol>
                </nav>
                {% endif %}

                {% if has_flash('error') %}
                    {% include 'components/alert.twig' with {
                        type: 'error',
                        message: flash('error'),
                        dismissible: true
                    } %}
                {% endif %}

                {% if has_flash('success') %}
                    {% include 'components/alert.twig' with {
                        type: 'success',
                        message: flash('success'),
                        dismissible: true
                    } %}
                {% endif %}

                <div class="bg-white shadow-sm rounded-lg">
                    {% block content %}{% endblock %}
                </div>
            </div>
        </main>

        <footer class="py-4 text-center text-sm text-gray-500">
            v{{ config('vaop.version') }}
        </footer>
    </div>
</body>
</html>