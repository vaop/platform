{% extends 'layouts/email.twig' %}

{% block title %}{{ t('emails.reset_password.title') }}{% endblock %}

{% block content %}
    <h2 style="margin-top: 0;">{{ t('emails.hello') }}</h2>

    <p>{{ t('emails.reset_password.intro') }}</p>

    <p style="text-align: center; margin: 32px 0;">
        <a href="{{ url }}" class="button">{{ t('emails.reset_password.button') }}</a>
    </p>

    <p>{{ t('emails.reset_password.expires', { count: expireMinutes }) }}</p>

    <p>{{ t('emails.reset_password.outro') }}</p>

    <hr style="border: none; border-top: 1px solid #e5e7eb; margin: 24px 0;">

    <p style="font-size: 14px; color: #6b7280;">
        {{ t('emails.trouble_clicking') }}
        <br>
        <a href="{{ url }}" style="word-break: break-all;">{{ url }}</a>
    </p>
{% endblock %}
