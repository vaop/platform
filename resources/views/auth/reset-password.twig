{% extends 'layouts/guest.twig' %}
{% import 'macros/forms.twig' as forms %}

{% block content %}
<div class="center stack stack-6" style="max-width: 24rem; margin: 4rem auto;">
    <div class="text-center">
        <h1 class="text-2xl font-semibold">{{ t('auth.reset_password_title') }}</h1>
        <p class="text-muted">{{ t('auth.reset_password_subtitle') }}</p>
    </div>

    <form method="POST" action="{{ route('password.update') }}" class="stack stack-4">
        {{ csrf_field() }}

        {{ forms.hidden('token', token) }}

        {{ forms.email('email', t('auth.email'), {
            required: true,
            autocomplete: 'email',
            value: old('email', email),
            error: errors.first('email')
        }) }}

        {{ forms.password('password', t('auth.new_password'), {
            required: true,
            autocomplete: 'new-password',
            error: errors.first('password')
        }) }}

        {{ forms.password('password_confirmation', t('auth.confirm_new_password'), {
            required: true,
            autocomplete: 'new-password'
        }) }}

        <button type="submit" class="btn btn-primary btn-full">
            {{ t('auth.reset_password_button') }}
        </button>
    </form>
</div>
{% endblock %}
