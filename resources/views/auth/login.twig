{% extends 'layouts/guest.twig' %}
{% import 'macros/forms.twig' as forms %}

{% block content %}
<div class="center stack stack-6" style="max-width: 24rem; margin: 4rem auto;">
    <div class="text-center">
        <h1 class="text-2xl font-semibold">{{ t('auth.login_title') }}</h1>
        <p class="text-muted">{{ t('auth.login_subtitle') }}</p>
    </div>

    <form method="POST" action="{{ route('login') }}" class="stack stack-4">
        {{ csrf_field() }}

        {{ forms.email('email', t('auth.email'), {
            required: true,
            autocomplete: 'email',
            error: errors.first('email')
        }) }}

        {{ forms.password('password', t('auth.password'), {
            required: true,
            autocomplete: 'current-password',
            error: errors.first('password')
        }) }}

        {{ forms.checkbox('remember', t('auth.remember_me'), {
            checked: old('remember')
        }) }}

        <button type="submit" class="btn btn-primary btn-full">
            {{ t('auth.login_button') }}
        </button>
    </form>
</div>
{% endblock %}
