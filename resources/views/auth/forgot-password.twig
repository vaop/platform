{% extends 'layouts/guest.twig' %}
{% import 'macros/forms.twig' as forms %}

{% block content %}
<div class="center stack stack-6" style="max-width: 24rem; margin: 4rem auto;">
    <div class="text-center">
        <h1 class="text-2xl font-semibold">{{ t('auth.forgot_password_title') }}</h1>
        <p class="text-muted">{{ t('auth.forgot_password_subtitle') }}</p>
    </div>

    {% if session('status') %}
        <div class="alert alert-success">
            {{ session('status') }}
        </div>
    {% endif %}

    <form method="POST" action="{{ route('password.email') }}" class="stack stack-4">
        {{ csrf_field() }}

        {{ forms.email('email', t('auth.email'), {
            required: true,
            autocomplete: 'email',
            value: old('email'),
            error: errors.first('email')
        }) }}

        <button type="submit" class="btn btn-primary btn-full">
            {{ t('auth.send_reset_link') }}
        </button>

        <p class="text-center text-sm text-muted">
            <a href="{{ route('login') }}">{{ t('auth.back_to_login') }}</a>
        </p>
    </form>
</div>
{% endblock %}
