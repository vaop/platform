{% extends 'layouts/guest.twig' %}

{% block content %}
<div class="center stack stack-6" style="max-width: 24rem; margin: 4rem auto;">
    <div class="text-center">
        <h1 class="text-2xl font-semibold">{{ t('auth.verify_email_title') }}</h1>
        <p class="text-muted">{{ t('auth.verify_email_subtitle') }}</p>
    </div>

    {% if session('status') %}
        <div class="alert alert-success">
            {{ session('status') }}
        </div>
    {% endif %}

    <div class="stack stack-4">
        <p>{{ t('auth.verify_email_instructions') }}</p>

        <form method="POST" action="{{ route('verification.send') }}">
            {{ csrf_field() }}

            <button type="submit" class="btn btn-primary btn-full">
                {{ t('auth.resend_verification') }}
            </button>
        </form>

        <form method="POST" action="{{ route('logout') }}">
            {{ csrf_field() }}

            <button type="submit" class="btn btn-secondary btn-full">
                {{ t('auth.logout') }}
            </button>
        </form>
    </div>
</div>
{% endblock %}
