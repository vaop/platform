{#
 # Error layout
 # Minimal layout for error pages - no session dependencies
 #}
<!DOCTYPE html>
<html lang="{{ app.locale }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{% block title %}{{ app.name }}{% endblock %}</title>

    {{ vite(['resources/css/app.css', 'resources/js/app.js']) }}
</head>
<body class="page">
    <header class="page-header">
        <div class="container flex-between" style="height: 4rem;">
            <a href="{{ url('/') }}" class="heading-lg">
                {{ app.name }}
            </a>
        </div>
    </header>

    <main class="page-content">
        {% block content %}{% endblock %}
    </main>

    <footer class="page-footer">
        <div class="container section-sm">
            <p class="text-small text-muted" style="text-align: center;">
                &copy; {{ now('Y') }} {{ app.name }}
            </p>
        </div>
    </footer>
</body>
</html>
