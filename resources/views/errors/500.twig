{#
 # 500 Server Error page
 #}
{% extends 'layouts/error.twig' %}

{% block title %}{{ __('Server Error') }} - {{ app.name }}{% endblock %}

{% block content %}
<div class="center-content section-lg">
    <div style="text-align: center;">
        <h1 class="heading-2xl" style="font-size: 6rem; color: var(--color-border);">500</h1>
        <h2 class="heading-lg" style="margin-top: 1rem;">{{ __('Server Error') }}</h2>
        <p class="text-muted" style="margin-top: 0.5rem;">{{ __('Something went wrong on our end. Please try again later.') }}</p>
        <div style="margin-top: 1.5rem;">
            {% include 'components/button.twig' with {
                href: url('/'),
                label: __('Go Home'),
                variant: 'primary'
            } %}
        </div>
    </div>
</div>
{% endblock %}
