{#
 # 419 Page Expired error page (CSRF token mismatch)
 #}
{% extends 'layouts/error.twig' %}

{% block title %}{{ __('Page Expired') }} - {{ app.name }}{% endblock %}

{% block content %}
<div class="center-content section-lg">
    <div style="text-align: center;">
        <h1 class="heading-2xl" style="font-size: 6rem; color: var(--color-border);">419</h1>
        <h2 class="heading-lg" style="margin-top: 1rem;">{{ __('Page Expired') }}</h2>
        <p class="text-muted" style="margin-top: 0.5rem;">{{ __('Your session has expired. Please refresh and try again.') }}</p>
        <div style="margin-top: 1.5rem;">
            {% include 'components/button.twig' with {
                href: 'javascript:location.reload()',
                label: __('Refresh Page'),
                variant: 'primary'
            } %}
        </div>
    </div>
</div>
{% endblock %}
