{#
 # 404 Not Found error page
 #}
{% extends 'layouts/error.twig' %}

{% block title %}{{ t('Page Not Found') }} - {{ app.name }}{% endblock %}

{% block content %}
<div class="center-content section-lg">
    <div style="text-align: center;">
        <h1 class="heading-2xl" style="font-size: 6rem; color: var(--color-border);">404</h1>
        <h2 class="heading-lg" style="margin-top: 1rem;">{{ t('Page Not Found') }}</h2>
        <p class="text-muted" style="margin-top: 0.5rem;">{{ t("Sorry, we couldn't find the page you're looking for.") }}</p>
        <div style="margin-top: 1.5rem;">
            {% include 'components/button.twig' with {
                href: url('/'),
                label: t('Go Home'),
                variant: 'primary'
            } %}
        </div>
    </div>
</div>
{% endblock %}
