{#
 # Welcome page
 #}
{% extends 'layouts/guest.twig' %}

{% block title %}{{ __('Welcome') }} - {{ app.name }}{% endblock %}

{% block content %}
<div class="min-h-[70vh] flex items-center justify-center">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="text-center">
            <h1 class="text-4xl font-bold text-gray-900 sm:text-5xl md:text-6xl">
                {{ __('Welcome to') }}
                <span class="text-indigo-600">{{ app.name }}</span>
            </h1>
            <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
                {{ __('Your virtual airline operations platform.') }}
            </p>
            <div class="mt-5 max-w-md mx-auto sm:flex sm:justify-center md:mt-8 gap-3">
                {% if is_guest() %}
                    {% include 'components/button.twig' with {
                        href: url('/login'),
                        label: __('Log In'),
                        variant: 'primary',
                        size: 'lg'
                    } %}
                    {% include 'components/button.twig' with {
                        href: url('/register'),
                        label: __('Register'),
                        variant: 'secondary',
                        size: 'lg'
                    } %}
                {% else %}
                    {% include 'components/button.twig' with {
                        href: url('/dashboard'),
                        label: __('Go to Dashboard'),
                        variant: 'primary',
                        size: 'lg'
                    } %}
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
