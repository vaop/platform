{#
 # Card component
 #
 # @param string title - Card title (optional)
 # @param string footer - Card footer content (optional)
 # @param bool padded - Whether to add padding to body (default: true)
 #}
{% set padded = padded|default(true) %}

<div class="bg-white rounded-lg shadow overflow-hidden">
    {% if title is defined and title %}
        <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900">{{ title }}</h3>
            {% if subtitle is defined and subtitle %}
                <p class="mt-1 text-sm text-gray-500">{{ subtitle }}</p>
            {% endif %}
        </div>
    {% endif %}

    <div class="{{ padded ? 'px-4 py-5 sm:p-6' : '' }}">
        {% block content %}{% endblock %}
    </div>

    {% if footer is defined and footer %}
        <div class="px-4 py-4 sm:px-6 bg-gray-50 border-t border-gray-200">
            {{ footer }}
        </div>
    {% endif %}
</div>
