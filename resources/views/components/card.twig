{#
 # Card component
 #
 # @param string title - Card title (optional)
 # @param string subtitle - Card subtitle (optional)
 # @param string footer - Card footer content (optional)
 # @param string variant - flat, elevated, bordered (default: none)
 # @param bool padded - Whether to add padding to body (default: true)
 # @param string class - Additional CSS classes
 #}
{% set padded = padded|default(true) %}
{% set variant = variant|default('') %}
{% set extraClass = class|default('') %}

{% set variantClass = variant ? 'card-' ~ variant : '' %}
{% set classes = 'card ' ~ variantClass ~ ' ' ~ extraClass %}

<div class="{{ classes }}">
    {% if title is defined and title %}
        <div class="card-header">
            <h3 class="card-title">{{ title }}</h3>
            {% if subtitle is defined and subtitle %}
                <p class="card-description">{{ subtitle }}</p>
            {% endif %}
        </div>
    {% endif %}

    <div class="{{ padded ? 'card-body' : '' }}">
        {% block content %}{% endblock %}
    </div>

    {% if footer is defined and footer %}
        <div class="card-footer">
            {{ footer }}
        </div>
    {% endif %}
</div>
