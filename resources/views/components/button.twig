{#
 # Button component
 #
 # @param string type - button, submit, reset (default: button)
 # @param string variant - primary, secondary, outline, ghost, danger, success (default: primary)
 # @param string size - sm, md, lg (default: md)
 # @param bool disabled - Whether button is disabled (default: false)
 # @param string href - If provided, renders as <a> tag instead of <button>
 # @param string label - Button text (default: 'Button')
 # @param string class - Additional CSS classes
 #}
{% set type = type|default('button') %}
{% set variant = variant|default('primary') %}
{% set size = size|default('md') %}
{% set disabled = disabled|default(false) %}
{% set label = label|default('Button') %}
{% set extraClass = class|default('') %}

{% set sizeClass = 'btn-' ~ size %}
{% set variantClass = 'btn-' ~ variant %}
{% set classes = 'btn ' ~ variantClass ~ ' ' ~ sizeClass ~ ' ' ~ extraClass %}

{% if href %}
    <a href="{{ href }}" class="{{ classes }}{% if disabled %} opacity-50 pointer-events-none{% endif %}">
        {{ label }}
    </a>
{% else %}
    <button type="{{ type }}" class="{{ classes }}"{% if disabled %} disabled{% endif %}>
        {{ label }}
    </button>
{% endif %}
